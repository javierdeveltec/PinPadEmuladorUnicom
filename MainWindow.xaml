<Window x:Class="PinPadEmuladorUnicom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PinPad Emulador - Demo" Height="520" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo: inputs y botones -->
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Configuración PinPad" FontWeight="Bold" Margin="0,0,0,6"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Conexión (COM/IP):" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtConexion" Width="200" Text="COM3"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Puerto PinPad:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPuerto" Width="200" Text="1087"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Timeout (s):" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTimeout" Width="200" Text="40"/>
            </StackPanel>

            <Separator Margin="0,0,0,8"/>

            <TextBlock Text="Operación: Venta" FontWeight="Bold" Margin="0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="IdVenta:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtIdVenta" Width="200" Text="V001"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Monto:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMonto" Width="200" Text="120.50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Tarjeta (MOTO/demo):" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTarjeta" Width="160" Text="4111111111111111"/>
            </StackPanel>

            <WrapPanel Margin="0,12" HorizontalAlignment="Left">
                <Button x:Name="btnInit" Content="Inicializar" Width="110" Margin="0,0,8,8" Click="btnInit_Click"/>
                <Button x:Name="btnCargarLlaves" Content="Cargar llaves" Width="110" Margin="0,0,8,8" Click="btnCargarLlaves_Click"/>
                <Button x:Name="btnVenta" Content="Venta" Width="110" Margin="0,0,8,8" Click="btnVenta_Click"/>
            </WrapPanel>

            <Separator Margin="0,12,0,12"/>

            <TextBlock Text="Otras operaciones" FontWeight="Bold" Margin="0,0,0,6"/>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="IdVenta(Ref):" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtRefVenta" Width="200" Text="V001"/>
            </StackPanel>
            <WrapPanel Margin="0,8">
                <Button x:Name="btnCancel" Content="Cancelar Venta" Width="120" Margin="0,0,8,8" Click="btnCancel_Click"/>
                <Button x:Name="btnDevolucion" Content="Devolución" Width="120" Margin="0,0,8,8" Click="btnDevolucion_Click"/>
            </WrapPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Tarjeta (consulta):" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTarjetaConsulta" Width="160" Text="4111111111111111"/>
            </StackPanel>
            <WrapPanel Margin="0,8">
                <Button x:Name="btnConsultaPuntos" Content="Consulta Puntos" Width="120" Margin="0,0,8,8" Click="btnConsultaPuntos_Click"/>
                <Button x:Name="btnReversos" Content="Reversos" Width="120" Margin="0,0,8,8" Click="btnReversos_Click"/>
            </WrapPanel>

        </StackPanel>

        <!-- separador -->
        <Rectangle Grid.Column="1" Fill="#EEE" Width="1"/>

        <!-- Panel derecho: log/resultados -->
        <StackPanel Grid.Column="2" Margin="6,0,0,0">
            <TextBlock Text="Log / Resultado" FontWeight="Bold"/>
            <ListBox x:Name="lstLog" Margin="0,6,0,0" />
            <TextBlock Text="Detalles JSON" FontWeight="Bold" Margin="0,8,0,4"/>
            <TextBox x:Name="txtDetalle" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="160"/>
        </StackPanel>
    </Grid>
</Window>
